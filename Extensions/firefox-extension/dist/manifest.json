{
  "manifest_version": 3,
  "name": "SkyPost",
  "version": "1.1.1",
  "description": "Post Composer and Scheduler for Bluesky. Custom post editing, analytics and scheduling of your Bluesky Posts",
  "author": "SkyPost",
  "browser_specific_settings": {
    "gecko": {
      "id": "skypost@example.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open Notes Workspace"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["customize.html", "customize.js", "workspace.html", "workspace.js", "pro-settings.html", "init.js", "license.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
