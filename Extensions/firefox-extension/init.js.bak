      <div style="display: flex; gap: 10px; margin-bottom: 15px;">
        <input type="text" id="license-key-input" placeholder="Paste your license key here" style="flex: 1; padding: 10px 12px; border: 1px solid #ddd; border-radius: 6px; font-size: 13px; font-family: monospace; color: #333; background: white;">
        <button id="activate-license-btn" style="padding: 10px 24px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 6px; font-size: 13px; font-weight: 600; cursor: pointer;">Activate</button>
      </div>
      <div id="license-message" style="min-height: 24px;"></div>
    </div>
  `;
  
  body.innerHTML = html;
  
  // Attach event listeners after HTML is set
  const activateBtn = document.getElementById('activate-license-btn');
  if (activateBtn) {
    activateBtn.addEventListener('click', activateLicense);
  }
  
  const pricingBtn = document.getElementById('pricing-page-btn');
  if (pricingBtn) {
    pricingBtn.addEventListener('click', goToPricingPage);
  }
}

async function activateLicense() {
  const input = document.getElementById('license-key-input');
  const key = input.value.trim();
  const msgEl = document.getElementById('license-message');
  
  if (!key) {
    showLicenseMessage('Please enter a license key', 'error');
    return;
  }
  
  const result = await licenseManager.activateLicense(key);
  
  if (result.success) {
    showLicenseMessage(result.message, 'success');
    input.value = '';
    setTimeout(() => {
      renderProModal();
    }, 1000);
  } else {
    showLicenseMessage(result.message, 'error');
  }
}

function showLicenseMessage(text, type) {
  const msgEl = document.getElementById('license-message');
  if (!msgEl) return;
  
  msgEl.innerHTML = `<div style="padding: 8px 12px; border-radius: 6px; font-size: 12px; ${
    type === 'success' ? 'background: #d4edda; color: #155724; border: 1px solid #c3e6cb;' :
    type === 'error' ? 'background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb;' :
    'background: #d1ecf1; color: #0c5460; border: 1px solid #bee5eb;'
  }">${text}</div>`;
  
  if (type === 'success') {
    setTimeout(() => {
      msgEl.innerHTML = '';
    }, 3000);
  }
}

function goToPricingPage() {
  chrome.tabs.create({
    url: 'https://your-pricing-page.com/bluesky-notes-pro'
  });
}

